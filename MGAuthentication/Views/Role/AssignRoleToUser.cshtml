@model MGAuthentication.Data.ViewModels.Role.AssignRoleToUserVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mt-3">
        <h4>Assign a new role to a user</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form class="mt-3" asp-action="AssignRoleToUser" asp-controller="Role" method="post">
                <div class="row my-2">
                    <label class="col-md-3" asp-for="UserId">User Name</label>
                    <select class="col-md-4 form-control" asp-for="UserId" asp-items="ViewBag.Employees">
                        <option value="">Please select one</option>
                    </select>
                </div>

                <div class="row my-2">
                    <label class="col-md-3" asp-for="RoleId">Role</label>
                    <select class="col-md-4 form-control" asp-for="RoleId" asp-items="ViewBag.Roles">
                        <option value="">Please Select One</option>
                    </select>
                </div>

                <div class="row my-3">
                    <button class="offset-md-3 btn btn-info" type="submit">Update</button>
                </div>
            </form>
        </div>
        <div class="col-md-12">
            <a class="btn btn-outline-success" asp-action="AdminPanel" asp-controller="Home">Back to Admin Panel</a>
        </div>
    </div>
</div>