@model IList<MGAuthentication.Data.ViewModels.Common.Department.DepartmentReadVM>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row my-2">
        <h4>Previously deleted data</h4>
    </div>
    <div class="col-md-12">
        <div asp-validation-summary="All" class="text-danger"></div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Created By</th>
                    <th>Created Date</th>
                    <th>Updated By</th>
                    <th>Updated Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.UpdatedBy</td>
                        <td>@item.UpdatedDate</td>
                        <td><a asp-action="Restore" asp-route-departmentId="@item.Id">Restore</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md-12">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>