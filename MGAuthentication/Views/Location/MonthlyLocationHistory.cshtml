@model MGAuthentication.Data.RepositoryModels.LocationReadRM
@{
    ViewData["Title"] = "Location Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="col-md-12 mt-5">
        <div class="card">

            <div class="card-header">
                <div class="row">
                    <div class="col-md-12">
                       行動履歴及び編集
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row my-2">
                    <div class="col-md-1">
                        <strong>氏名</strong>
                    </div>
                    <div class="col-md-6">
                        @Model.FullName
                    </div>
                    <div class="col-md-3 offset-md-2">
                        <a asp-action="LocationUpdate" asp-route-userId="@User.FindFirst("sub").Value" class="btn btn-outline-info float-right">新規予定</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mt-3">
                        <table class="table table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>日付</th>
                                    <th>行き先</th>
                                    <th>予定</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CurrentLocations)
                                {
                                    <tr>
                                        @*<td>@item.UserId</td>*@
                                        <td>@item.EffectiveDate.ToShortDateString()</td>
                                        <td>@item.LocationName</td>
                                        <td>@item.LocationPlan</td>
                                        <td><a asp-action="Edit" asp-route-locationId="@item.Id">編集</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-10">
                        <a asp-action="Index" asp-controller="Location" class="float-right btn btn-outline-info">戻る</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
@section Scripts
{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}