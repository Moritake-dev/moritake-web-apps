@using Microsoft.AspNetCore.Identity;
@inject SignInManager<MGAuthentication.Data.User.ApplicationUser> SignInManager
@inject UserManager<MGAuthentication.Data.User.ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Profile" asp-controller="User" title="Manage">@User.FindFirst("name").Value</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-info" asp-controller="Auth" asp-action="Logout">ログアウト</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            @*<a class="btn btn-outline-info" asp-controller="Auth" asp-action="Login">Login</a>*@
            <a class="btn btn-outline-info" asp-controller="Auth" asp-action="Login">ログイン</a>
        </li>
    }
</ul>