@model MGAuthentication.Data.ViewModels.Auth.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="container">
        <div class="col-md-12 my-3">
            <div class="row my-3">
                <h4 class="col-md-10">Register a new user to the system</h4>
                <a class="col-md-2 btn btn-outline-success" asp-action="AdminPanel" asp-controller="Home">Back to Admin Panel</a>
            </div>
        </div>

        <div class="col-md-12 my-3">
            <form asp-controller="Auth" asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Username">Username</label>
                        <input type="text" placeholder="Please Enter Username" asp-for="Username" class="form-control" tabindex="1" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" placeholder="Please Enter Password" class="form-control" tabindex="1" />
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input asp-for="ConfirmPassword" placeholder="Please Enter Confirm Password" class="form-control" tabindex="1" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row my-2">
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName">First Name</label>
                            <input type="text" placeholder="Please Enter FirstName" asp-for="FirstName" class="form-control" tabindex="1" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="LastName">Last Name</label>
                            <input type="text" placeholder="Please Enter LastName" asp-for="LastName" class="form-control" tabindex="1" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row my-2">

                        <div class="form-group col-md-2">
                            <label asp-for="PostNo">Post Number</label>
                            <input type="text" asp-for="PostNo" placeholder="Please Enter Post Number" class="form-control" tabindex="1" />
                            <span asp-validation-for="PostNo" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-10">
                            <label asp-for="Address">Address</label>
                            <input type="text" asp-for="Address" placeholder="Please Enter Address" class="form-control" tabindex="1" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row my-2">
                        <div class="form-group col-md-4">
                            <label asp-for="DateOfBirth">Birthday</label>
                            <input asp-for="DateOfBirth" type="text" id="datepicker" class="form-control" tabindex="1" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="Gender">Sex</label>
                            <select asp-for="Gender" class="form-control" tabindex="1" asp-items="Html.GetEnumSelectList<MGAuthentication.Data.Enums.Gender>()">
                                <option selected="selected" value="">Please select</option>
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="BloodType">Blood Group</label>
                            <select asp-for="BloodType" class="form-control" tabindex="1" asp-items="Html.GetEnumSelectList<MGAuthentication.Data.Enums.BloodType>()">
                                <option selected="selected" value="">Please select</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="RestType">Holiday Type</label>
                        <select asp-for="RestType" class="form-control" tabindex="1" asp-items="Html.GetEnumSelectList<MGAuthentication.Data.Enums.RestType>()">
                            <option selected="selected" value="">Please select</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row my-2">
                        <div class="form-group col-md-4">
                            <label asp-for="EmergencyContactNumber">Emergency Contact</label>
                            <input type="tel" class="form-control" placeholder="Please Enter Emergency Contact" tabindex="1" />
                            <span asp-validation-for="EmergencyContactNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row my-2">
                        <div class="form-group col-md-4">
                            <label asp-for="DepartmentId">Department</label>
                            <select class="form-control" asp-for="DepartmentId" tabindex="1" asp-items="ViewBag.Departments">
                                <option value="">Please Select One</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="JobPositionId">Job Position</label>
                            <select class="form-control" asp-for="JobPositionId" tabindex="1" asp-items="ViewBag.JobPositions">
                                <option value="">Please Select One</option>
                            </select>
                            <span asp-validation-for="JobPositionId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-3">
                            <label asp-for="EmployeeOrder">Employee Number</label>
                            <input class="form-control" type="text" asp-for="EmployeeOrder" />
                            <span asp-validation-for="EmployeeOrder" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row my-5">
                        <div class="form-group col-md-4">
                            <label asp-for="IsAdmin">Is this an admin profile?</label>
                            <input asp-for="IsAdmin" type="checkbox" />
                            <span asp-validation-for="IsAdmin" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="IsEmployeeProfile">Is this an Employee Profile?</label>
                            <input name="IsEmployeeProfile" asp-for="IsEmployeeProfile" type="checkbox" checked />
                            <span asp-validation-for="IsEmployeeProfile" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="IsActiveEmployee">Is this an Active Employee?</label>
                            <input name="IsActiveEmployee" asp-for="IsActiveEmployee" type="checkbox" checked />
                            <span asp-validation-for="IsActiveEmployee" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts
{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
}