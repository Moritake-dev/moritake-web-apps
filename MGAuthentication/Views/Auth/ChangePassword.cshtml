@model MGAuthentication.Data.ViewModels.Auth.ChangePasswordVM
@{
    ViewData["Title"] = "Change Password";
}

<div class="container">
    <div class="card mt-2">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h5>パスワードの変更</h5>
                </div>
            </div>
        </div>

        <div class="card-body font-self-14">
            <form asp-controller="Auth" asp-action="ChangePassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="py-1 col-md-12">
                    <div class="form-group row">
                        @*<label asp-for="CurrentPassword" class="col-md-4">Current Password</label>*@
                        <label asp-for="CurrentPassword" class="col-md-4">元のパスワード</label>
                        <div class="col-md-7">
                            <input class="form-control" asp-for="CurrentPassword" autocomplete="password" />
                        </div>
                    </div>

                    <div class="form-group row">
                        @*<label asp-for="NewPassword" class="col-md-4">New Password</label>*@
                        <label asp-for="NewPassword" class="col-md-4">新しいパスワード</label>
                        <div class="col-md-7">
                            <input class="form-control" asp-for="NewPassword" type="password" autocomplete="new-password" />
                        </div>
                    </div>

                    <div class="form-group row">
                        @*<label asp-for="ConfirmPassword" class="col-md-4">Confirm Password</label>*@
                        <label asp-for="ConfirmPassword" class="col-md-4">確認用パスワード</label>
                        <div class="col-md-7">
                            <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="offset-md-5 col-md-2 mt-3 align-items-center">
                        <button class="btn btn-block btn-sm btn-primary" type="submit">
                            @*Update*@
                            変更
                        </button>
                        <button type="button" class="btn btn-block btn-sm btn-primary">
                            @*Back*@
                            戻る
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>